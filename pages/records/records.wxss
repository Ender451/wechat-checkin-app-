/* records.wxss */
.container {
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  padding: 20px 20px 10px 20px;
  text-align: center;
  font-size: 18px;
  font-weight: bold;
  color: #333;
}

/* 筛选区域 */
.filter-section {
  margin: 0 20px 20px 20px;
  background-color: #fff;
  border-radius: 8px;
  padding: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.filter-item {
  display: flex;
  align-items: center;
  gap: 10px;
  flex: 1;
}

.filter-item text {
  font-size: 14px;
  color: #333;
  white-space: nowrap;
}

.picker {
  flex: 1;
  padding: 8px 12px;
  border: 1px solid #ddd;
  border-radius: 4px;
  font-size: 14px;
  color: #333;
  background-color: #fff;
  min-width: 0;
}

.reset-btn {
  font-size: 12px;
  padding: 8px 12px;
  line-height: 1.4;
  margin: 0;
  white-space: nowrap;
  margin-left: 10px;
}

/* 表格样式 */
.record-table {
  margin: 0 20px 20px 20px;
  background-color: #fff;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.table-row {
  display: flex;
  align-items: stretch;
  border-bottom: 1px solid #f0f0f0;
  min-height: 60px;
}

.table-row:last-child {
  border-bottom: none;
}

.table-header {
  background-color: #f7f7f7;
  font-weight: bold;
  min-height: 50px;
}

/* 左滑删除容器 */
.record-wrapper {
  position: relative;
  overflow: hidden;
  border-bottom: 1px solid #f0f0f0;
  height: auto;
  min-height: 60px;
  width: 100%;
}

.record-wrapper:last-child {
  border-bottom: none;
}

/* 删除按钮层 */
.delete-layer {
  position: absolute;
  right: 0;
  top: 0;
  width: 80px;
  height: 100%;
  background-color: #e64340;
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1;
}

.delete-text {
  color: white;
  font-size: 16px;
  font-weight: bold;
}

/* 内容层 */
.content-layer {
  position: relative;
  background-color: white;
  display: flex;
  align-items: stretch;
  min-height: 60px;
  width: 100%;
  z-index: 2;
  transition: transform 0.3s ease;
}

.content-layer:active {
  background-color: #f7f7f7;
}

/* 重新设计列宽，去掉操作列，优化工作时长显示 */
.date-cell {
  flex: 0 0 85px;
  padding: 12px 8px;
}

.time-cell {
  flex: 0 0 70px;
  padding: 12px 6px;
}

.duration-cell {
  flex: 1;
  padding: 12px 8px;
  min-width: 0;
  text-align: center;
}

.table-cell {
  font-size: 14px;
  color: #333;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  word-break: keep-all;
  white-space: nowrap;
  overflow: hidden;
  box-sizing: border-box;
}

.table-header .table-cell {
  color: #666;
  font-size: 13px;
  line-height: 1.4;
}

/* 日期单元格特殊样式 */
.date-main {
  font-size: 14px;
  font-weight: bold;
  color: #333;
  line-height: 1.2;
  text-align: center;
}

.date-week {
  font-size: 11px;
  color: #666;
  line-height: 1.2;
  margin-top: 2px;
  text-align: center;
}

/* 时间单元格样式 */
.time-cell .table-cell {
  font-family: monospace;
  font-size: 13px;
  color: #333;
}

/* 工作时长单元格 - 优化显示 */
.duration-cell {
  font-family: monospace;
  font-size: 13px;
  color: #333;
  font-weight: 500;
  justify-content: center;
  align-items: center;
  text-align: center;
  flex: 1.2; /* 增加工作时长列的宽度 */
  min-width: 90px; /* 确保有足够空间显示完整的工作时长 */
}

.duration-cell .table-cell {
  font-size: 13px;
  color: #333;
  font-weight: 500;
  text-align: center;
}

.empty-tip {
  margin: 0 20px;
  text-align: center;
  padding: 40px 20px;
  color: #999;
  font-size: 14px;
  background-color: #fff;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

/* 周末特殊样式 */
.table-row:nth-child(even) {
  background-color: #fafafa;
}

/* 响应式优化 */
@media (max-width: 375px) {
  .date-cell {
    flex: 0 0 75px;
  }
  
  .time-cell {
    flex: 0 0 60px;
  }
  
  .duration-cell {
    flex: 1;
    font-size: 12px;
  }
}

/* 窄屏幕适配 */
@media (max-width: 320px) {
  .filter-item text {
    font-size: 12px;
  }
  
  .picker {
    font-size: 12px;
  }
  
  .reset-btn {
    font-size: 11px;
    padding: 6px 8px;
  }
}