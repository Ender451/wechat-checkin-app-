
/* index.wxss */
.container {
  min-height: 100vh;
  padding: 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 25px;
  background-color: #f5f5f5;
}

.header {
  text-align: center;
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 10px;
}

/* 时间显示区域 */
.time-display {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 8px;
  background-color: #fff;
  padding: 25px 35px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  width: 90%;
  max-width: 320px;
}

.current-time {
  font-size: 36px;
  font-weight: bold;
  color: #333;
  font-family: 'Courier New', monospace;
  letter-spacing: 1px;
}

.date-info {
  font-size: 14px;
  color: #666;
  font-weight: 500;
}

/* 工作时长显示 - 始终显示 */
.work-duration {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 6px;
  background-color: #fff;
  padding: 20px 25px;
  border-radius: 12px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  width: 90%;
  max-width: 320px;
}

.duration-label {
  font-size: 13px;
  color: #666;
  font-weight: 500;
}

.duration-value {
  font-size: 28px;
  font-weight: bold;
  color: #1aad19;
  font-family: 'Courier New', monospace;
}

/* 状态信息 */
.status {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  padding: 12px 20px;
  border-radius: 8px;
  box-shadow: 0 1px 4px rgba(0, 0, 0, 0.1);
  width: 90%;
  max-width: 320px;
}

.status text {
  font-size: 14px;
  color: #333;
  font-weight: 500;
}

/* 椭圆形按钮容器 */
.actions {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 15px;
  width: 90%;
  max-width: 320px;
}

/* 椭圆形按钮 */
.oval-button {
  width: 100%;
  height: 50px;
  background-color: #1aad19;
  border-radius: 25px;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2px 8px rgba(26, 173, 25, 0.3);
  transition: all 0.2s ease;
  cursor: pointer;
}

.oval-button:active {
  transform: scale(0.98);
  background-color: #179b16;
  box-shadow: 0 1px 4px rgba(26, 173, 25, 0.3);
}

/* 已打卡状态的按钮 */
.oval-button.clocked-in {
  background-color: #666;
  box-shadow: 0 2px 8px rgba(102, 102, 102, 0.3);
}

.oval-button.clocked-in:active {
  background-color: #555;
  box-shadow: 0 1px 4px rgba(102, 102, 102, 0.3);
}

.button-text {
  font-size: 16px;
  font-weight: bold;
  color: white;
  letter-spacing: 0.5px;
}