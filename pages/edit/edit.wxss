/* edit.wxss */
.container {
  padding: 15px;
  display: flex;
  flex-direction: column;
  gap: 15px;
  min-height: 100vh;
  padding-bottom: 20px;
}

.header {
  text-align: center;
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 5px;
}

/* 日期显示区域 */
.date-section {
  display: flex;
  align-items: center;
  background-color: #fff;
  padding: 15px;
  border-radius: 8px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.date-label {
  font-size: 15px;
  color: #333;
  font-weight: 600;
  margin-right: 10px;
}

.date-value {
  font-size: 16px;
  color: #007aff;
  font-weight: bold;
}

/* 时段管理区域 */
.periods-section {
  background-color: #fff;
  border-radius: 8px;
  padding: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15px;
  padding-bottom: 10px;
  border-bottom: 1px solid #f0f0f0;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  color: #333;
}

.add-period-btn {
  background-color: #007aff;
  color: white;
  border: none;
  border-radius: 4px;
  padding: 0 12px;
  height: 40px;
  line-height: 40px;
  font-size: 14px;
}

.add-period-btn:active {
  background-color: #0056d6;
}

/* 时段列表 */
.periods-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.period-item {
  border: 1px solid #e0e0e0;
  border-radius: 6px;
  padding: 12px;
  background-color: #fafafa;
  transition: all 0.3s ease;
}

.period-item.conflict {
  border-color: #ff4757;
  background-color: #fff5f5;
  box-shadow: 0 0 8px rgba(255, 71, 87, 0.2);
}

.period-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10px;
}

.period-type-info {
  display: flex;
  align-items: center;
  gap: 8px;
}

.period-type-badge {
  padding: 2px 8px;
  border-radius: 4px;
  font-size: 12px;
  font-weight: bold;
  color: white;
}

.main-badge {
  background-color: #1aad19;
}

.overtime-badge {
  background-color: #ff6b35;
}

.period-duration {
  font-size: 13px;
  color: #666;
  font-weight: 500;
}

.period-actions {
  display: flex;
  gap: 8px;
}

.delete-period-btn {
  background-color: #fa5151;
  color: white;
  border: none;
  border-radius: 4px;
  padding: 0 8px;
  height: 32px;
  line-height: 32px;
  font-size: 12px;
  min-width: 60px;
}

.delete-period-btn:active {
  background-color: #d93434;
}

/* 时间设置 */
.period-times {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.time-item {
  display: flex;
  align-items: center;
  gap: 10px;
}

.time-label {
  width: 70px;
  font-size: 14px;
  color: #333;
}

.picker-view {
  flex: 1;
  padding: 8px 12px;
  background-color: #f7f7f7;
  border-radius: 4px;
  font-size: 14px;
  color: #333;
  text-align: center;
  border: 1px solid #ddd;
}

.picker-view:active {
  background-color: #e0e0e0;
}

/* 空状态 */
.empty-periods {
  text-align: center;
  padding: 30px;
  color: #999;
  font-size: 14px;
}

/* 统计信息 */
.statistics-section {
  background-color: #fff;
  border-radius: 8px;
  padding: 15px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
}

.stat-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8px 0;
  border-bottom: 1px solid #f0f0f0;
}

.stat-item:last-child {
  border-bottom: none;
}

.stat-label {
  font-size: 14px;
  color: #333;
}

.stat-value {
  font-size: 14px;
  font-weight: bold;
  color: #333;
}

.stat-value.main-duration {
  color: #1aad19;
}

.stat-value.overtime-duration {
  color: #ff6b35;
}

/* 操作按钮 */
.actions {
  display: flex;
  gap: 8px;
  margin-top: 15px;
}

.actions button {
  flex: 1;
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  border-radius: 4px;
}

.actions button[type="default"] {
  background-color: #f8f8f8;
  color: #333;
  border: 1px solid #ddd;
}

.actions button[type="primary"] {
  background-color: #07c160;
  color: white;
  border: 1px solid #07c160;
}

.actions button[type="warn"] {
  background-color: #fa5151;
  color: white;
  border: 1px solid #fa5151;
}